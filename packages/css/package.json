{
  "name": "@taytay-ui/css",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "keywords": [
    "Tay",
    "Tay"
  ],
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "generate": "tsx src/generateConfigs.ts && prettier --write src/{vanilla,css-modules,tailwind}/*.{js,ts,css} --no-error-on-unmatched-pattern"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./vanilla/*": "./src/vanilla/*",
    "./css-modules/*": {
      "import": "./src/css-modules/*",
      "types": "./src/css-modules/*.d.ts"
    },
    "./tailwind/*": "./src/tailwind/*"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.mts",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.mts",
        "default": "./dist/index.cjs"
      },
      "./vanilla/*": "./src/vanilla/*",
      "./css-modules/*": "./src/css-modules/*",
      "./tailwind/*": "./src/tailwind/*"
    }
  },
  "sideEffects": [
    "*.css"
  ],
  "author": "Taylor Steele",
  "license": "ISC",
  "devDependencies": {
    "@taytay-ui/eslint-config": "workspace:^",
    "@taytay-ui/typescript-config": "workspace:*",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "eslint": "^8.55.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "tsup": [
    {
      "entry": {
        "providers/react": "src/providers/react.tsx"
      },
      "clean": true,
      "sourcemap": "inline",
      "dts": true,
      "format": [
        "cjs",
        "esm"
      ]
    },
    {
      "entry": [
        "src/index.ts"
      ],
      "clean": true,
      "sourcemap": "inline",
      "bundle": false,
      "dts": true,
      "format": [
        "cjs",
        "esm"
      ]
    }
  ]
}