{
  "name": "@taytay-ui/css",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "Tay",
    "Tay"
  ],
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsup",
    "generate": "ts-node generateConfigs.ts && prettier --write src/{vanilla,css-modules,tailwind}/*.{js,css} --no-error-on-unmatched-pattern"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./vanilla/*": "./src/vanilla/*",
    "./css-modules/*": "./src/css-modules/*",
    "./tailwind/*": "./src/tailwind/*"
  },
  "publishConfig": {
    "main": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "types": "./dist/index.d.mts",
        "default": "./dist/index.js"
      },
      "./vanilla/*": "./src/vanilla/*",
      "./css-modules/*": "./src/css-modules/*",
      "./tailwind/*": "./src/tailwind/*"
    }
  },
  "sideEffects": [
    "*.css"
  ],
  "author": "Taylor Steele",
  "license": "ISC",
  "devDependencies": {
    "@taytay-ui/typescript-config": "workspace:*",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ]
  }
}